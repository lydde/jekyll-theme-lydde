{
    // Prettier
    "editor.formatOnSave": true,
    // Shopify Liquid
    "files.associations": {
        "*.html": "liquid"
    },
    // Formatter
    "[html][liquid]": {
        "editor.defaultFormatter": "Shopify.theme-check-vscode"
    },
    // Disable vscode built-in stylelint
    "css.validate": false,
    "scss.validate": false,
    "less.validate": false,
    // Stylint extension settings
    "stylelint.snippet": [
        "css",
        "scss"
    ],
    "stylelint.validate": [
        "css",
        "scss"
    ]
}